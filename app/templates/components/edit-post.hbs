<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" placeholder=post.author}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" placeholder=post.title}}
    </div>

    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id="content" placeholder=post.content}}
    </div>

    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date" placeholder=post.date}}
    </div>

    <div class="form-group">
      <label for="tags">Tag</label>
      {{input value=tags id="tags" placeholder=post.tags}}
    </div>

    <div class="form-group">
      <label for="category">Category</label>
      {{input value=category id="category" placeholder=post.category}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" placeholder=post.image}}
    </div>

    <div class="form-group">
      <label for="abstract">Post Abstract</label>
      {{input value=abstract id="abstract" placeholder=post.abstract}}
    </div>

    <button {{action 'edit' post}}>Save</button>
  </form>
  <button {{action 'delete' post}}>Delete Post</button>
</div>
