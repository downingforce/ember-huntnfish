<div class="row" id="post-box">
  <div>

    <h1>{{model.title}}</h1>
    <h4>{{model.date}}</h4>
    <h4>By <strong>{{model.author}}</strong></h4>
    <img class="post-image" src={{model.image}} align="right">
    <p class="test">{{model.content}}</p>


  </div>
  <button class="negative ui button" {{action 'editPost' model}}>Edit Post</button>
</div>


<div class="ui segment comment">
  {{new-tag saveTag="saveTag" post=model}}
</div>

<div class="ui segment comment">
  {{new-comment saveComment="saveComment" post=model}}
</div>

<h2> Comments </h2>
{{#each model.comments as |comment|}}
  <div class="ui segment comment">
    <p>{{comment.url}}</p>
    <p>{{comment.content}}</p>
    <p>by {{comment.name}}</p>
    <button class="negative ui button" {{action 'deleteComment' comment}}>Delete Comment</button>
  </div>
{{/each}}
